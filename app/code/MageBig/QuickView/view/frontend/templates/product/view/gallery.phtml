        <div class="loader"></div>
    </div>
</div>
<!--Fix for jumping content. Loader must be the same size as gallery.-->
<script>
    function addStyleSheet () {
        var ss = document.styleSheets;
        for (var i = 0, max = ss.length; i < max; i++) {
            if (ss[i].href && ss[i].href.indexOf('mage/gallery/gallery') !== -1)
                return;
        }
        var link = document.createElement("link");
        link.rel = "stylesheet";
        link.media = "all";
        link.href = "<?= $block->getViewFileUrl('mage/gallery/gallery.css') ?>";

        document.getElementsByTagName("head")[0].appendChild(link);
    }
    addStyleSheet();
</script>
<script>
    var config = {
            "width": <?= /* @noEscape */ $block->getImageAttribute('product_page_image_medium', 'width') ?>,
            "thumbheight": <?php /* @noEscape */ echo $block->getImageAttribute('product_page_image_small', 'height')
                ?: $block->getImageAttribute('product_page_image_small', 'width'); ?>,
            "navtype": "<?= /* @noEscape */ $block->getVar("gallery/navtype") ?>",
            "height": <?= /* @noEscape */ $block->getImageAttribute('product_page_image_medium', 'height') ?>
        },
        thumbBarHeight = 0,
        loader = document.querySelectorAll('#quickview-gallery [data-role="loader"]')[0];

    if (config.navtype === 'horizontal') {
        thumbBarHeight = config.thumbheight;
    }

    loader.style.paddingBottom = ( config.height / config.width * 100) + "%";
</script>
