<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="empty"/>
    <referenceContainer name="page.wrapper">
        <container name="checkout.logo" htmlTag="div" htmlClass="container logo-checkout" before="-">
            <block class="Magento\Theme\Block\Html\Header\Logo" name="logo-checkout">
                <arguments>
                    <argument name="logoPathResolver" xsi:type="object">Magento\Theme\ViewModel\Block\Html\Header\LogoPathResolver</argument>
                    <argument name="logo_size_resolver" xsi:type="object">Magento\Theme\ViewModel\Block\Html\Header\LogoSizeResolver</argument>
                </arguments>
            </block>
        </container>
        <block class="Magento\Cms\Block\Block" name="footer.checkout" after="-">
            <arguments>
                <argument name="block_id" xsi:type="string">footer-checkout</argument>
            </arguments>
        </block>
    </referenceContainer>
</layout>
